<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="title_text_style_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
    </style>

    <style name="content_text_style_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">@dimen/textsize_13sp</item>
    </style>

    <style name="item_button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>

    </style>

    <style name="item_outter_padding_style">
        <item name="android:paddingLeft">@dimen/item_padding_8dp</item>
        <item name="android:paddingRight">@dimen/item_padding_8dp</item>
        <item name="android:paddingTop">@dimen/item_padding_4dp</item>
        <item name="android:paddingBottom">@dimen/item_padding_4dp</item>
    </style>

    <style name="item_inner_padding_style">
        <item name="android:paddingLeft">@dimen/item_padding_12dp</item>
        <item name="android:paddingRight">@dimen/item_padding_8dp</item>
        <item name="android:paddingTop">@dimen/item_padding_8dp</item>
        <item name="android:paddingBottom">@dimen/item_padding_12dp</item>
    </style>

</resources>
