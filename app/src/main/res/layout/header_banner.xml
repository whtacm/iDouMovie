<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:youth="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        youth:title_height="24dp"
        youth:image_scale_type="fit_xy"
        youth:title_background="@null"
        youth:indicator_height="6dp"
        youth:indicator_width="6dp"
        youth:indicator_drawable_selected="@drawable/indicator_white"
        youth:indicator_drawable_unselected="@drawable/indicator_gray"
        youth:indicator_margin="@dimen/item_padding_4dp"
        android:background="@android:color/darker_gray"
        youth:title_textsize="@dimen/txt_size_12sp">

    </com.youth.banner.Banner>


</LinearLayout>


